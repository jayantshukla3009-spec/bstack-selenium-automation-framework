<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Bstack Automation Suite">
<listeners>
    <listener class-name="com.jayant.listener.Listener"/>
</listeners>

    <test name="Login Tests">
        <classes>
            <class name="com.jayant.tests.LoginTest"/>
        </classes>
    </test>

    <test name="Product Tests">
        <classes>
            <class name="com.jayant.tests.ProductTest"/>
        </classes>
    </test>

    <test name="Cart Tests">
        <classes>
            <class name="com.jayant.tests.CartTest"/>
        </classes>
    </test>

    <test name="Checkout Tests">
        <classes>
            <class name="com.jayant.tests.CheckOutTest"/>
        </classes>
    </test>

</suite>
